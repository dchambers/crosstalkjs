{
	"name": "crosstalkjs",
	"version": "0.1.0",
	"description": "CrossTalkJs facilitates rich inter-window and inter-frame communication",
	"main": "lib/crosstalk.js",
	"dependencies": {
		"topiarist": "0.1.0",
		"secure-random": "1.1.1"
	},
	"devDependencies": {
		"dchambers-lib-build-tool": "0.x",
		"chai": "1.9.2"
	},
	"watch": {
